root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.c]
indent_size = 2
max_line_length = 100

[*.rs]
max_line_length = 100

[{*.zsh,*.bash,*.sh}]
indent_size = 2
tab_width = 2

[{bowerrc,.babelrc,jest.config,.stylelintrc,.eslintrc,*.jsb3,*.jsb2,*.json}]
indent_size = 2
